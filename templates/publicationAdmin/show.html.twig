{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }}Publication{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="text-center my-5">Publication</h1>

        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publication.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ publication.date ? publication.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ publication.picture }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex my-3">
            <a class="btn btn-outline-primary mr-3" href="{{ path('admin_publication_edit', {'id': publication.id}) }}">
                Modifier
            </a>

            {{ include('publicationAdmin/_delete_form.html.twig') }}
        </div>

        <a class="btn btn-danger" href="{{ path('admin_publication_index') }}">Accueil Administration</a>
    </main>
{% endblock %}
