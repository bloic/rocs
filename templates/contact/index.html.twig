{% extends 'layout.html.twig' %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('contact') }}
        {% endblock %}
{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <main class=" py-5">
        <div class="container">
            <h1 class="text-center pt-5 text-uppercase">Contact</h1>
            <div class="row">
                <div class="col-lg-6 my-5">
                    <img class="w-100 shadow p-1" src="{{ asset('build/images/mauricemillet.jpg') }}" alt="locaux gym">
                </div>
                <div class="col-lg-6 my-5 text-center">
                    <h3 class="text-center"> Nos Coordonn√©es</h3>
                    <p class="mt-5">Gymnase Maurice Millet</p>
                    <p>18 rue Maurice Millet</p>
                    <p>45140 ST JEAN DE LA RUELLE</p>
                </div>
            </div>

            <div class="row">

                <div class="card col-lg-12 my-5">
                    <div class="card-body">
                        <h3 class="text-center">Vous souhaitez nous contacter ?</h3>
                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-primary ">Envoyer</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
